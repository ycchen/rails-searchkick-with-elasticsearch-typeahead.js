<h1>Movies</h1>

<%= form_tag(movies_path, method: :get, class: "form-inline", role: 'search') do %>
  <div class="input-group">
    <%= text_field_tag :term,
        params[:term],
        id: 'movies_search',
        autocomplete: :off,
        placeholder: 'Search',
        class: 'form-control'%>
    <div class="input-group-btn search-panel">
      <%= link_to 'Clear', root_url, class: "btn btn-default" %>
      <%= submit_tag 'Search', name: nil, class: "btn btn-default" %>
    </div>
  </div>
<% end %>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Released</th>
      <th>Runtime</th>
      <th>Plot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td nowrap><%= movie.year %></td>
        <td nowrap><%= movie.released %></td>
        <td nowrap><%= movie.runtime %></td>
        <td><%= movie.plot %></td>
        <td><%= link_to icon('eye'), movie %></td>
        <td><%= link_to icon('pencil'), edit_movie_path(movie) %></td>
        <td><%= link_to icon('trash'), movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path %>
